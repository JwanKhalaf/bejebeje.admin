@using bejebeje.admin.Application.Common.Models
@model bejebeje.admin.Application.Common.Models.PaginatedList<bejebeje.admin.Application.Authors.Queries.GetAuthors.AuthorDto>

@{
    ViewData["Title"] = "List of authors";
}

<div class="flex justify-between mb-8">
    <h1 class="text-5xl">Authors</h1>
    
    <div>
        <a class="text-white border-2 border-slate-500 rounded-md py-1 px-2 hover:bg-slate-700 ml-3" asp-controller="Authors" asp-action="Create">Add author</a>
    </div>
</div>

<div class="bg-slate-800 rounded-md mb-5 p-8">
    <ul class="flex items-center mb-6 border-slate-400 border-b-2">
        @await Html.PartialAsync("_ActiveTab", new ActiveTab("authors", "all", "All Authors"))

        @await Html.PartialAsync("_ActiveTab", new ActiveTab("authors", "unapproved", "Unapproved"))

        @await Html.PartialAsync("_ActiveTab", new ActiveTab("authors", "duplicates", "Duplicates"))

        @await Html.PartialAsync("_ActiveTab", new ActiveTab("authors", "deleted", "Deleted"))
    </ul>

    <form action="">
        <input class="bg-slate-900 px-4 py-2 mb-6 w-1/2 rounded-md" type="text" name="searchTerm" placeholder="Author name or alias">
    </form>

    <table class="w-full">
        <thead class="bg-slate-900 rounded-md">
        <tr class="">
            <th class="text-sm text-left rounded-tl-md rounded-bl-md py-2 px-4">Author Id</th>
            <th class="text-sm text-left py-2 px-4">Name</th>
            <th class="text-sm text-left py-2 px-4">Created at</th>
            <th class="text-sm text-left py-2 px-4">Modified at</th>
            <th class="text-sm text-left rounded-tr-md rounded-br-md py-2 px-4 w-4">Deleted</th>
            <th class="text-sm text-left rounded-tr-md rounded-br-md py-2 px-4 w-4">Approved</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr class="border-b border-slate-600 last:border-0">
                <td class="py-4 px-4">@item.Id</td>
                <td class="py-4 px-4 flex items-center">
                    <picture>
                        <source type="image/webp" srcset=@($"{item.ImageUrl}.webp")>
                        <source type="image/jpeg" srcset=@($"{item.ImageUrl}.jpg")>

                        <img src=@($"{item.ImageUrl}.jpg")
                             class="border-1 mr-4 border-slate-800 rounded-full w-10 h-10"
                             loading="lazy"
                             alt="@item.ImageAlternateText"/>
                    </picture>
                    @item.FirstName @item.LastName
                </td>
                <td class="py-4 px-4">@item.CreatedAt</td>
                <td class="py-4 px-4">
                    @if (item.ModifiedAt != null)
                    {
                        @item.ModifiedAt
                    }
                </td>
                <td class="text-center">
                    @if (item.IsDeleted)
                    {
                        <i class="text-red-400 text-md fa-solid fa-trash-check" title="Is deleted"></i>
                    }
                    else
                    {
                        <i class="text-slate-600 text-md fa-solid fa-trash" title="Is not deleted"></i>
                    }
                </td>
                <td class="text-center">
                    @if (item.IsApproved)
                    {
                        <i class="text-green-400 text-md fa-solid fa-solid fa-circle-check" title="Is approved"></i>
                    }
                    else
                    {
                        <i class="text-slate-600 text-md fa-solid fa-circle" title="Is not approved"></i>
                    }
                </td>
                <td>
                    <a asp-controller="Authors" asp-action="Details" asp-route-authorId="@item.Id">View</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="flex justify-between">
    <div class="">
        <p>Page @Model.PageNumber of @Model.TotalPages (@Model.TotalCount total records)</p>
    </div>

    <div>
        <a class="text-white border-2 border-slate-500 rounded-md py-1 px-2 hover:bg-slate-700 @(Model.HasPreviousPage ? "" : "pointer-events-none text-slate-500")" asp-controller="Authors" asp-action="All" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-searchTerm="@Model.SearchTerm">Previous</a>
        <a class="text-white border-2 border-slate-500 rounded-md py-1 px-2 hover:bg-slate-700 ml-3 @(Model.HasNextPage ? "" : "pointer-events-none text-slate-500")" asp-controller="Authors" asp-action="All" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-searchTerm="@Model.SearchTerm">Next</a>
    </div>
</div>