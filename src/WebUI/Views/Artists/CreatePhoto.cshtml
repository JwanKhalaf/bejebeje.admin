@model bejebeje.admin.WebUI.ViewModels.CreateArtistViewModel

@{
    ViewBag.Title = "Add new artist";
    Layout = "_Layout";
}

<div class="mb-8">
    <h1 class="text-5xl">New Artist</h1>
</div>

<div class="bg-slate-800 flex rounded-md mb-5">
    <div class="bg-slate-800 border-r border-slate-500 rounded-l-md p-8">
        <ul>
            <li class="mb-8 flex items-center">
                <span class="block w-8 h-8 rounded-full bg-slate-500 mr-4 flex items-center justify-center">
                    <i class="fas text-slate-700 fa-circle"></i>
                </span>
                <a>Type</a>
            </li>

            <li class="mb-8 flex items-center">
                <span class="block w-8 h-8 rounded-full bg-slate-500 mr-4 flex items-center justify-center">
                    <i class="fas text-slate-700 fa-circle"></i>
                </span>
                <a>Name</a>
            </li>

            <li class="mb-8 flex items-center">
                <span class="block w-8 h-8 rounded-full bg-slate-500 mr-4 flex items-center justify-center">
                    <i class="fas text-slate-700 fa-circle"></i>
                </span>
                <a>Gender</a>
            </li>

            <li class="mb-8 flex items-center">
                <span class="block w-8 h-8 rounded-full bg-slate-500 mr-4 flex items-center justify-center">
                    <i class="fas text-slate-700 fa-circle"></i>
                </span>
                <a>Photo</a>
            </li>
        </ul>
    </div>

    <div class="rounded-r-md p-8">
        <form method="post">
            <input type="hidden" asp-for="Band.IsBand"/>
            <input type="hidden" asp-for="Name.FirstName"/>
            <input type="hidden" asp-for="Name.LastName"/>
            <div class="mb-8">
                <h3 class="text-xl">Upload artist photo?</h3>
            </div>

            <h3>photo form</h3>

            <div>
                <input class="bg-indigo-600 rounded-md px-4 py-2 cursor-pointer" type="submit" value="Next"/>
            </div>
        </form>
    </div>
</div>

<a class="text-white border-2 border-slate-500 rounded-md py-1 px-2 hover:bg-slate-700 ml-3" asp-controller="artists" asp-action="all">Back</a>