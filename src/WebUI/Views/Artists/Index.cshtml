@model bejebeje.admin.Application.Common.Models.PaginatedList<bejebeje.admin.Application.Artists.Queries.GetArtists.ArtistDto>

@{
    ViewData["Title"] = "List of artists";
}

<div class="mb-8">
    <h1 class="text-5xl">Artists</h1>
</div>

<div class="bg-slate-800 rounded-md mb-5 p-8">
    <table class="w-full">
        <thead class="bg-slate-900 rounded-md">
        <tr class="">
            <th class="rounded-tl-md rounded-bl-md text-left py-2 px-4">Artist Id</th>
            <th class="text-left py-2 px-4">Name</th>
            <th class="text-left py-2 px-4">Created at</th>
            <th class="text-left py-2 px-4">Modified at</th>
            <th class="text-left rounded-tr-md rounded-br-md py-2 px-4">Approved</th>
        </tr>
        </thead>

        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr class="py-4">
                <td class="py-2 px-4">@item.Id</td>
                <td class="py-2 px-4 flex items-center">
                    <picture>
                        <source type="image/webp" srcset=@($"{item.ImageUrl}.webp")>
                        <source type="image/jpeg" srcset=@($"{item.ImageUrl}.jpg")>

                        <img src=@($"{item.ImageUrl}.jpg")
                             class="border-1 mr-4 border-slate-800 rounded-full w-8 h-8"
                             loading="lazy"
                             alt="@item.ImageAlternateText"/>
                    </picture>
                    @item.FirstName @item.LastName
                </td>
                <td class="px-4">@item.CreatedAt</td>
                <td class="px-4">
                    @if (item.ModifiedAt != null)
                    {
                        @item.ModifiedAt
                    }
                </td>
                <td class="px-4">@await Html.PartialAsync("_ApprovalStatusPartial", item.IsApproved)</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="flex justify-between">
    <div class="">
        <p>Page @Model.PageNumber of @Model.TotalPages</p>
    </div>

    <div>
        <a class="text-white border-2 border-slate-500 rounded-md py-1 px-2 hover:bg-slate-700 @(Model.HasPreviousPage ? "" : "pointer-events-none")" asp-controller="Artists" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
        <a class="text-white border-2 border-slate-500 rounded-md py-1 px-2 hover:bg-slate-700 ml-3 @(Model.HasNextPage ? "" : "pointer-events-none")" asp-controller="Artists" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
    </div>
</div>