@model bejebeje.admin.WebUI.ViewModels.CreateArtistViewModel

@{
    ViewBag.Title = "Add new artist";
    Layout = "_Layout";
}

<div class="mb-8">
    <h1 class="text-5xl">New Artist</h1>
</div>

<div class="bg-slate-800 rounded-md mb-5 p-8">
    <form method="post">
        <div class="mb-4">
            <label class="block mb-2">First name</label>
            <input class="p-2 bg-slate-600 rounded-md" type="text" name="FirstName"/>
        </div>

        <div class="mb-4">
            <label class="block mb-2">Last name</label>
            <input class="p-2 bg-slate-600 rounded-md" type="text" name="LastName"/>
        </div>

        <div class="mb-4">
            <label class="block mb-2">Sex</label>
            <select asp-for="Sex.SelectedSex" asp-items="Model.Sex.SexOptions" class="p-2 bg-slate-600 rounded-md"></select>
        </div>
        
        <div>
            <input class="bg-indigo-600 rounded-md px-4 py-2 cursor-pointer" type="submit" value="Add artist"/>
        </div>
    </form>
</div>

<a class="text-white border-2 border-slate-500 rounded-md py-1 px-2 hover:bg-slate-700 ml-3" asp-controller="artists" asp-action="all">Back</a>