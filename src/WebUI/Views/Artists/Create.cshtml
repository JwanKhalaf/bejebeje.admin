@model bejebeje.admin.WebUI.ViewModels.CreateArtistBandViewModel

@{
    ViewBag.Title = "Add new artist";
    Layout = "_Layout";
}

<div class="mb-8">
    <h1 class="text-5xl">New Artist</h1>
</div>

<div class="bg-slate-800 flex rounded-md mb-5">
    <div class="bg-slate-800 border-r border-slate-500 rounded-l-md p-8">
        <ul>
            <li class="mb-8 flex items-center">
                <span class="block w-8 h-8 rounded-full bg-slate-500 mr-4 flex items-center justify-center">
                    <i class="fas text-slate-700 fa-circle"></i>
                </span>
                <a>Type</a>
            </li>

            <li class="mb-8 flex items-center">
                <span class="block w-8 h-8 rounded-full border-slate-500 border-2 mr-4 flex items-center justify-center"></span>
                <a>Name</a>
            </li>

            <li class="mb-8 flex items-center">
                <span class="block w-8 h-8 rounded-full border-slate-500 border-2 mr-4 flex items-center justify-center"></span>
                <a>Gender</a>
            </li>

            <li class="mb-8 flex items-center">
                <span class="block w-8 h-8 rounded-full border-slate-500 border-2 mr-4 flex items-center justify-center"></span>
                <a>Photo</a>
            </li>
        </ul>
    </div>

    <div class="rounded-r-md p-8">
        <form method="post">
            <div class="mb-4">
                <h3>Are they a solo artist or a band?</h3>
            </div>

            <div class="flex">
                <label class="mr-8 bg-slate-900 rounded-md w-36 cursor-pointer p-4">
                    <span class="flex items-center justify-center py-8 px-12">
                        <i class="fas text-5xl text-slate-700 fa-user"></i>
                    </span>
                    
                    <span class="block flex items-center">
                        <input class="mr-2 w-5 h-5 border-slate-700 text-slate-700" type="radio" name="IsBand" value="false"/>
                        <span class="block">Solo Artist</span>
                    </span>
                </label>

                <label class="bg-slate-900 rounded-md w-36 cursor-pointer p-4">
                    <span class="block flex items-center justify-center py-8 px-12">
                        <i class="fas text-5xl text-slate-700 fa-users"></i>
                    </span>
                    
                    <span class="block flex items-center">
                        <input class="mr-2 w-5 h-5 border-slate-700 text-slate-700" type="radio" name="IsBand" value="true"/>
                        <span class="block">Band</span>
                    </span>
                </label>
            </div>

            @* <div class="mb-4"> *@
            @*     <label class="block mb-2">Last name</label> *@
            @*     <input class="p-2 bg-slate-600 rounded-md" type="text" name="LastName"/> *@
            @* </div> *@
            @* *@
            @* <div class="mb-4"> *@
            @*     <label class="block mb-2">Sex</label> *@
            @*     <select asp-for="SelectedSex" asp-items="Model.SexOptions" class="p-2 bg-slate-600 rounded-md"></select> *@
            @* </div> *@

            @* <div> *@
            @*     <input class="bg-indigo-600 rounded-md px-4 py-2 cursor-pointer" type="submit" value="Add artist"/> *@
            @* </div> *@
        </form>

    </div>

</div>

<a class="text-white border-2 border-slate-500 rounded-md py-1 px-2 hover:bg-slate-700 ml-3" asp-controller="artists" asp-action="all">Back</a>